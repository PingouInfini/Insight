                                 baseTableName="event_equipment"
                                 constraintName="fk_event_equipment_equipment_id"
                                 referencedColumnNames="id"
                                 referencedTableName="equipment"/>
        
        <addForeignKeyConstraint baseColumnNames="events_id"
                                 baseTableName="event_location"
                                 constraintName="fk_event_location_events_id"
                                 referencedColumnNames="id"
                                 referencedTableName="event"/>
        <addForeignKeyConstraint baseColumnNames="locations_id"
                                 baseTableName="event_location"
                                 constraintName="fk_event_location_locations_id"
                                 referencedColumnNames="id"
                                 referencedTableName="location"/>
        
        <addForeignKeyConstraint baseColumnNames="events_id"
                                 baseTableName="event_organisation"
                                 constraintName="fk_event_organisation_events_id"
                                 referencedColumnNames="id"
                                 referencedTableName="event"/>
        <addForeignKeyConstraint baseColumnNames="organisations_id"
                                 baseTableName="event_organisation"
                                 constraintName="fk_event_organisation_organisations_id"
                                 referencedColumnNames="id"
                                 referencedTableName="organisation"/>
        
    </changeSet>
</databaseChangeLog>
